<div class="container" style="width: 60%">
    <div class="row" style="padding: 5px">
        @foreach (var item in Model)
        {

            <div class="col-md-6" style="border: 1px black solid; padding: 5px">

                <div class="col-md-4">
                    <img src="@item.Photo" width="100" height="100" />
                </div>
                <div class="col-md-8" style="margin-right: -10%">
                    Price: @item.Price <br />
                    Name: @item.ProductName <br />
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) <br />
                </div>
            </div>

        }
    </div>
</div>
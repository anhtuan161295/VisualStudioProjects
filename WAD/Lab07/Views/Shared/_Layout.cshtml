<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(Lab07.Languages.Lg.Home, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    @{
                        var user = Session["User"] as Lab07.Models.User;
                        if (user == null)
                        {
                            @Html.ActionLink(Lab07.Languages.Lg.Login, "Login", "Login", new { area = "" }, new { @class = "navbar-brand" })

                        }
                        else if (user != null)
                        {
                            <p class="navbar-brand">Welcome to @user.Username</p>
                            @Html.ActionLink(Lab07.Languages.Lg.Logout, "Logout", "Login", new { area = "" }, new { @class = "navbar-brand" })

                        }
                    }

                    <a href="@Url.Action("changeLG", "Home", new {lg = "en-US"})">
                        <img src="~/Images/united-states-of-america.png" width="50" height="50" />
                    </a>
                    <a href="@Url.Action("changeLG", "Home", new {lg = "vi-VN"})">
                        <img src="~/Images/vietnam.png" width="50" height="50" />
                    </a>

                    @*@Html.ActionLink(Lab07.Languages.Lg.English, "changeLG", "Home", new { lg = "en-US" }, new { @class = "navbar-brand" })
                        @Html.ActionLink(Lab07.Languages.Lg.Vietnamese, "changeLG", "Home", new {lg = "vi-VN"}, new {@class = "navbar-brand"})*@
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p> @Lab07.Languages.Lg.Today &copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
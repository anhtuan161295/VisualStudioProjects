@model IEnumerable<Lab04MVCWebRole.ServiceReference1.Account>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div>
    @using (Html.BeginForm("SendMoney", "Transactions", FormMethod.Post))
    {
        <h3>Send money to account</h3>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label("lblSender", "Sender", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("txtSender", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("lblReceiver", "Receiver", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("txtReceiver", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("lblAmountToSend", "Amount of money to send", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("txtAmountToSend", "", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" name="btnSendMoney" value="Send Money" class="btn btn-primary" />
                </div>
            </div>
        </div>

    }
</div>
<hr />
<div>
    @using (Html.BeginForm("Transaction", "Transactions", FormMethod.Post))
    {
        <h3>Deposit / Withdraw money</h3>

        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label("lblAccount", "Account", new { @class = "control-label col-md-2" })

                <div class="col-md-10">
                    @Html.TextBox("txtAccount", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("lblAmount", "Amount", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("txtAmount", "", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" name="btnTransaction" value="Deposit" class="btn btn-primary" />
                    <input type="submit" name="btnTransaction" value="Withdraw" class="btn btn-primary" />
                </div>
            </div>
        </div>

    }
</div>
<hr />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccountName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Passcode)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passcode)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }
</table>
@model IEnumerable<Lab07MVCWebRole.Models.Album>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@*new { genre = ((SelectList)ViewBag.Genres).SelectedValue })*@
@using (Html.BeginForm("IndexByGenre", "Home", FormMethod.Post))
{// name phải là 1 trong 2 key của select list, ở đây ViewBag.Genres có 2 key là GenreName và GenreValue
 //Khi submit, url sẽ có dạng /Home/IndexByGenre?GenreName= giá trị của key, suy ra tham số bên controller là GenreName
@Html.DropDownList("GenreName", ViewBag.Genres as SelectList)
    <input type="submit" value="Search" class="btn btn-primary" />

}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearOfRelease)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfRelease)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<Page
    x:Class="Lab05.AddItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lab05"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="85" Margin="0,55,0,0" VerticalAlignment="Top" Width="542">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0" />
                    <GradientStop Color="White" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock x:Name="tblTitleAdd" TextWrapping="Wrap" Text="Add Item" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
        <Button x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Height="88" Margin="139,52,0,0" VerticalAlignment="Top" Width="188" FontSize="24" Click="btnBack_Click" />

        <local:UCAddItem x:Name="UCAdd" HorizontalAlignment="Center"></local:UCAddItem>
    </Grid>
</Page>